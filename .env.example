# Application Configuration
# For Railway: Copy this to Railway environment variables
APP_NAME="AI-Assisted CRM"
DEBUG=false
VERSION="1.0.0"

# Database Configuration
# For Railway: Use ${{Postgres.DATABASE_URL}} reference
DATABASE_URL="postgresql+asyncpg://crm_user:crm_password@localhost:5432/crm_db"

# Redis Configuration
# For Railway: Use ${{Redis.REDIS_URL}} reference
REDIS_URL="redis://localhost:6379/0"

# Security Configuration
SECRET_KEY="your-super-secret-key-change-in-production"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# AI Service API Keys
ANTHROPIC_API_KEY="your-anthropic-api-key"
OPENAI_API_KEY="your-openai-api-key"
GOOGLE_AI_KEY="your-google-ai-api-key"

# OAuth Credentials - Microsoft 365
MICROSOFT_CLIENT_ID="your-microsoft-client-id"
MICROSOFT_CLIENT_SECRET="your-microsoft-client-secret"
MICROSOFT_TENANT_ID="your-microsoft-tenant-id"
MICROSOFT_REDIRECT_URI="http://localhost:8000/api/v1/integrations/ms365/callback"

# OAuth Credentials - Google Workspace
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# URL Configuration
FRONTEND_URL="http://localhost:8000"
BACKEND_URL="http://localhost:8000"

# MCP Integration Configuration
# For Railway: Use http://mcp-server.railway.internal:8001
MCP_MICROSOFT365_URL="http://localhost:8001"
MCP_TIMEOUT_SECONDS=30
MCP_RETRY_ATTEMPTS=3
MCP_CONNECTION_POOL_SIZE=10

# Email Configuration (for notifications)
SMTP_SERVER="smtp.gmail.com"
SMTP_PORT=587
SMTP_USERNAME="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# File Upload
MAX_FILE_SIZE=10485760  # 10MB in bytes