# Local Development Environment
# Copy this to .env.local and fill in your values
# .env.local overrides .env and is gitignored

# Database (local PostgreSQL)
DATABASE_URL="postgresql+asyncpg://crm_user:crm_password@localhost:5432/crm_db"

# Redis (local)
REDIS_URL="redis://localhost:6379/0"

# Security (generate your own for production)
SECRET_KEY="local-dev-secret-key-change-for-production"

# AI Service API Keys (add your keys)
ANTHROPIC_API_KEY="your-anthropic-api-key"
OPENAI_API_KEY=""
GOOGLE_AI_KEY=""

# Microsoft 365 OAuth (from Azure App Registration)
MICROSOFT_CLIENT_ID="your-microsoft-client-id"
MICROSOFT_CLIENT_SECRET="your-microsoft-client-secret"
MICROSOFT_TENANT_ID="your-microsoft-tenant-id"
MICROSOFT_REDIRECT_URI="http://localhost:8000/api/v1/integrations/ms365/callback"

# Google OAuth (optional)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# URLs (localhost for local dev)
FRONTEND_URL="http://localhost:8000"
BACKEND_URL="http://localhost:8000"

# MCP Integration (local MCP server)
MCP_MICROSOFT365_URL="http://localhost:8001"
MCP_TIMEOUT_SECONDS=30

# Debug mode
DEBUG=true
